{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl" : "angular",
    "paths" : {
      "@app/*" : ["app/*"],
      "@environments/*" : ["environments/*"],
      "@components/*" : ["app/components/*"],
      "@directives/*" : ["app/directives/*"],
      "@models/*" : ["app/models/*"],
      "@modules/*" : ["app/modules/*"],
      "@services/*" : ["app/services/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
